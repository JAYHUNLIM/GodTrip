<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="attraction">

	
	<insert id="attractioninsert" parameterType="java.util.Map">
	    INSERT INTO attraction (area_code, tour_name, keyword, content, filename, filesize)
	    VALUES (#{area_code}, #{tour_name}, #{keyword}, #{content}, #{filename}, #{filesize})
	</insert>
	

	
	<select id="attractionList" resultType="kr.co.godtrip.attraction.AttractionDTO">
		select *
		from attraction
	</select>
	
	<!-- dto로 했을 때 --> 
	 <select id="attractionDetail" resultType="kr.co.godtrip.attraction.AttractionDTO">
        SELECT *
        FROM attraction
        WHERE tour_code = #{tour_code}
    </select>
	

<!-- 
 <select id="attractionDetail" resultType="java.util.Map">
        SELECT *
        FROM attraction
        WHERE tour_code = #{tour_code}
    </select>
    
    -->
	
	<delete id="attractionDelete" parameterType="String">
		DELETE FROM attraction
        WHERE tour_code = #{tour_code}
	</delete>
	
	
	<select id="filename" resultType="String" parameterType="String">
		select filename
		from attraction
		where tour_code = #{tour_code}
	</select>
	
	<select id="search" resultType="java.util.Map" parameterType="String">
		select *
		from attraction
		where tour_name LIKE #{tour_name}
		order by tour_name
	</select>
	
	
	 

    <update id="attractionUpdate" parameterType="kr.co.godtrip.attraction.AttractionDTO">
        UPDATE attraction
        SET area_code=#{area_code}
           ,tour_name=#{tour_name}
           ,keyword=#{keyword}
           ,content=#{content}
           ,filename=#{filename}
           ,filesize=#{filesize}           
        WHERE tour_code=#{tour_code}
    </update>
 
	 
